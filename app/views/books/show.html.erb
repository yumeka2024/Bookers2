<div>
  <div>
    <div>
      <%= render 'books/user_info', user: @user, book_new: @book_new %>
    </div>

    <div>
      <h2>Book detail</h2>
      <table>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
              <%= image_tag @book.user.get_profile_image(100,100); %><br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book.id), method: :get %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>