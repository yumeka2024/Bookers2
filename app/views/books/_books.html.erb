<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
        <%= image_tag book.user.get_profile_image(80,80); %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>

  </tbody>
</table>