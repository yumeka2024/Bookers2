<div>
  <div>
    <div>
      <h2>User info</h2>

      <%= form_with model: @user, local: true do |f| %>
        <label>Name</label>
        <%= f.text_field :name %>
        <label>Image</label>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <label>Introduction</label>
        <%= f.text_field :introduction %>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>