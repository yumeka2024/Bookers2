<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/99724ae1be.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav>
        <div>
          <a href="/"><span>Bookers</span></a>
          <button>
            <span></span>
          </button>
          <div>
            <ul>
            <% if user_signed_in? %>
              <li>
                <%= link_to "Home", user_path(current_user.id), method: :get %>
              </li>
              <li>
                <%= link_to "Users", users_path, method: :get %>
              </li>
              <li>
                <%= link_to "Books", books_path, method: :get %>
              </li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            <% else %>
              <li>
                <%= link_to "Home", root_path, method: :get %>
              </li>
              <li>
                <%= link_to "About", about_path, method: :get %>
              </li>
              <li>
                <%= link_to "Sign up", new_user_registration_path, method: :get %>
              </li>
              <li>
                <%= link_to "Log in", new_user_session_path, method: :get %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
    <%= yield %>
    </main>

    <footer>
      <div>
        <div>
          <div>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
